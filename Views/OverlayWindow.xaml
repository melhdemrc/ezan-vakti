<Window x:Class="EzanVakti.Views.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ezan Vakti"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    
    <!-- Two-line compact layout -->
    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="4,2" MinWidth="70">
        
        <!-- Line 1: Prayer Name + Time -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock x:Name="PrayerNameText"
                      Text="YÃ¼kleniyor..."
                      FontFamily="Segoe UI"
                      FontSize="12"
                      FontWeight="Normal"
                      Foreground="White"
                      Margin="0,0,4,0"
                      TextOptions.TextFormattingMode="Display"
                      TextOptions.TextRenderingMode="ClearType"/>
            <TextBlock x:Name="PrayerTimeText"
                      Text="00:00"
                      FontFamily="Segoe UI"
                      FontSize="12"
                      FontWeight="Normal"
                      Foreground="White"
                      TextOptions.TextFormattingMode="Display"
                      TextOptions.TextRenderingMode="ClearType"/>
        </StackPanel>
        
        <!-- Line 2: Countdown -->
        <TextBlock x:Name="CountdownText"
                  FontFamily="Segoe UI"
                  FontSize="12"
                  FontWeight="Normal"
                  Foreground="White"
                  HorizontalAlignment="Center"
                  TextOptions.TextFormattingMode="Display"
                  TextOptions.TextRenderingMode="ClearType">
            <Run Text="00:00:00"/>
        </TextBlock>
        
    </StackPanel>
</Window>
